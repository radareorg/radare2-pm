R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-extras"
R2PM_DESC "Jaguar GPU assembly support for radare2"

R2PM_INSTALL() {
	./configure --prefix="${R2PM_PREFIX}" || exit 1
	cd jaguar-gpu || exit 1
	${MAKE} clean
	${MAKE} || exit 1
	${MAKE} install R2_PLUGIN_PATH="${R2PM_PLUGDIR}" || exit 1
}

R2PM_UNINSTALL() {
	cd jaguar-gpu || exit 1
	${MAKE} uninstall "${R2PM_PLUGDIR}" || exit 1
}

R2PM_END

