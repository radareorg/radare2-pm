R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-release"
R2PM_DESC "Radare2 releasing machinery"

R2PM_INSTALL() {
	$MAKE CONFIG
	if [ "${GLOBAL}" = 1 ]; then
		$MAKE install
	else
		$MAKE install PREFIX=${R2PM_PREFIX}
	fi
}

R2PM_UNINSTALL() {
	$MAKE CONFIG
	if [ "${GLOBAL}" = 1 ]; then
		$MAKE uninstall
	else
		$MAKE uninstall PREFIX="${R2PM_PREFIX}"
	fi
}

R2PM_END
