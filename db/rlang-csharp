R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-rlang"
R2PM_DESC "C# scripting plugin for radare2"

R2PM_INSTALL() {
	./configure --prefix="${R2PM_PREFIX}" || exit 1
	${MAKE} -C csharp || exit 1
	${MAKE} -C csharp install || exit 1
}

R2PM_UNINSTALL() {
	${MAKE} -C csharp uninstall
}

R2PM_END
