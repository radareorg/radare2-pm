R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-extras"
R2PM_DESC "Conversational shell for radare2"

R2PM_INSTALL() {
	B="${R2PM_PREFIX}/bin/r2elisa"
	cd r2elisa
	npm i
	echo "#!/bin/sh" > $B
	echo "node $PWD/index.js" '$*' >> $B
	chmod +x $B
}

R2PM_UNINSTALL() {
	B="${R2PM_PREFIX}/bin/r2elisa"
	rm -f "${B}"
}

R2PM_END
