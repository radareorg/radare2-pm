R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-extras"
R2PM_DESC "M68K disassembler and analyzer for radare2"

R2PM_INSTALL() {
	./configure --prefix="${R2PM_PREFIX}" || exit 1
	cd libr
	${MAKE} clean
	${MAKE} m68k || exit 1
	${MAKE} m68k-install R2PM_PLUGDIR="${R2PM_PLUGDIR}"
}

R2PM_UNINSTALL() {
	rm -f "${R2PM_PLUGDIR}/asm_m68k_net."*
	rm -f "${R2PM_PLUGDIR}/anal_m68k_net."*
}

R2PM_END
