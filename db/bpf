R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-extras"
R2PM_DESC "[r2-arch] BPF disassembler, analyzer, emulator"

R2PM_INSTALL() {
	cd bpf || exit 1
	${MAKE} clean
	${MAKE} || exit 1
	cp *.${LIBEXT} "${R2PM_PLUGDIR}" || exit 1
}

R2PM_UNINSTALL() {
	rm -f ${R2PM_PLUGDIR}/*bpf*
}

R2PM_END
