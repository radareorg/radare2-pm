R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-extras"
R2PM_DESC "Altera Nios embedded processor disassembly support for radare2"

R2PM_INSTALL() {
	./configure --prefix="${R2PM_PREFIX}" || exit 1
	${MAKE} -C libr clean
	${MAKE} -C libr nios || exit 1
	${MAKE} -C libr nios-install R2PM_PLUGDIR="${R2PM_PLUGDIR}"
}

R2PM_UNINSTALL() {
	rm -f "${R2PM_PLUGDIR}/asm_nios."*
}

R2PM_END
