R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-rlang"
R2PM_DESC "[rlang] Lua r2pipe/RLang plugin"

R2PM_INSTALL() {
	./configure --prefix="${R2PM_PREFIX}" || exit 1
	${MAKE} -C lua || exit 1
	${R2PM_SUDO} ${MAKE} -C lua install || exit 1
}

R2PM_UNINSTALL() {
	${R2PM_SUDO} ${MAKE} -C lua uninstall
}

R2PM_END
