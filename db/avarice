R2PM_BEGIN

R2PM_GIT "https://github.com/raimue/avarice"
R2PM_DESC "Avarice AVR JTAG gdbserver bridge"

R2PM_INSTALL() {
	./Bootstrap || exit 1
	./configure --prefix="${R2PM_PREFIX}" || exit 1
	${MAKE} -j 4 || exit -1
	${MAKE} install || exit 1
}

R2PM_UNINSTALL() {
	${MAKE} uninstall || exit 1
}

R2PM_END
