R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-rlang"
R2PM_DESC "[rlang] Python RLang plugin #!python"

R2PM_INSTALL() {
	[ -z python-config ] && \
		echo "python-config binary for python3 not found," \
		"please specify via PYTHON_CONFIG environment variable" && exit 1
	cd python
	${MAKE} clean || exit 1
	${MAKE} || exit 1
	${MAKE} install R2PM_PLUGDIR="${R2PM_PLUGDIR}" || exit 1
}

R2PM_UNINSTALL() {
	${MAKE} -C python uninstall
}

R2PM_END
