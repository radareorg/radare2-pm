R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-extras"
R2PM_DESC "MSIL disassembler for radare2 (work in progress)"

R2PM_INSTALL() {
	#export PKG_CONFIG_PATH=/usr/lib/pkgconfig
	./configure --prefix="${R2PM_PREFIX}" || exit 1
	cd libr/asm || exit 1
	${MAKE} clean
	${MAKE} msil || exit 1
	cp -f p/asm_msil.${LIBEXT} "${R2PM_PLUGDIR}" || exit 1
	echo "cp -f p/asm_msil.${LIBEXT} ${R2PM_PLUGDIR}"
}

R2PM_UNINSTALL() {
	rm -f "${R2PM_PLUGDIR}"/*msil*
}

R2PM_END
