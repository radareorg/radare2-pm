R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-bindings"
R2PM_DESC "Native Lua API bindings for radare2"

R2PM_INSTALL() {
	./configure --prefix="${R2PM_PREFIX}" --enable=lua || exit 1
	${R2PM_SUDO} ${MAKE} install-vapi DESTDIR="${R2PM_DESTDIR}" || exit 1
	cd lua
	${MAKE} clean
	${MAKE} || exit 1
	${R2PM_SUDO} ${MAKE} install DESTDIR="${R2PM_DESTDIR}" || exit 1
}

R2PM_UNINSTALL() {
	cd lua
	${R2PM_SUDO uninstall
}

R2PM_END
