R2PM_BEGIN

R2PM_GIT "https://github.com/dnakov/r2d2"
R2PM_DESC "GPT-4 interface plugin for radare2"

R2PM_INSTALL() {
    pip install .
    ln -s "${R2PM_GITDIR}/r2d2/r2d2/main.py" "${R2PM_PLUGDIR}/r2d2.py"
}

R2PM_UNINSTALL() {
    pip uninstall r2d2
    rm -f "${R2PM_PLUGDIR}/r2d2.py"
}

R2PM_END