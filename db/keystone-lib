R2PM_BEGIN

R2PM_GIT "https://github.com/keystone-engine/keystone"
R2PM_DESC "[syspkg] keystone assembler library"

R2PM_INSTALL() {
	mkdir build
	cd build || exit 1
	cmake -DCMAKE_INSTALL_PREFIX:PATH=${R2PM_PREFIX} ..
	${MAKE} -j4
	${R2PM_SUDO} ${MAKE} -j${R2PM_JOBS} install
}

R2PM_UNINSTALL() {
	cd build || exit 1
	${R2PM_SUDO} ${MAKE} uninstall
}

R2PM_END
