R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-extras"
R2PM_DESC "AtomBIOS disassembler and analyzer for radare2"

R2PM_INSTALL() {
	./configure --prefix="${R2PM_PREFIX}" || exit 1
	cd libr || exit 1
	${MAKE} clean || exit 1
	${MAKE} atombios R2PM_PLUGDIR="${R2PM_PLUGDIR}" || exit 1
	${MAKE} atombios-install R2PM_PLUGDIR="${R2PM_PLUGDIR}" || exit 1
}

R2PM_UNINSTALL() {
	cd libr || exit 1
	${MAKE} atombios-uninstall R2PM_PLUGDIR="${R2PM_PLUGDIR}" || exit 1
}

R2PM_END
