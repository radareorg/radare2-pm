R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-extras"
R2PM_DESC "EWF forensic image loader for radare2"

R2PM_INSTALL() {
	./configure --prefix="${R2PM_PREFIX}" || exit 1
	cd libr/io/p || exit 1
	${MAKE} clean
	${MAKE} ewf || R2PM_FAIL Build
	${MAKE} ewf-install || R2PM_FAIL Install
}

R2PM_UNINSTALL() {
	cd libr/io/p
	${MAKE} ewf-uninstall || R2PM_FAIL
}

R2PM_END
