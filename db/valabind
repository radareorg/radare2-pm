R2PM_BEGIN

R2PM_GIT "https://github.com/radare/valabind"
R2PM_DESC "Valabind tool for generating bindings from VAPI files"
R2PM_DEPS vala

R2PM_INSTALL() {
	${MAKE} clean
	${MAKE} || exit 1
	${R2PM_SUDO} ${MAKE} install PREFIX="${R2PM_PREFIX}" || exit 1
}

R2PM_UNINSTALL() {
	${R2PM_SUDO} ${MAKE} uninstall PREFIX="${R2PM_PREFIX}" || exit 1
}

R2PM_END
