R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-bindings"
R2PM_DESC "Native Lua SWIG bindings"
# R2PM_DEPS valabind lua-lib

R2PM_INSTALL() {
	./configure --prefix="${R2PM_PREFIX}" --enable=lua || exit 1
	cd lua || exit 1
	${MAKE} clean
	${MAKE} -j ${R2PM_JOBS} || exit 1
	${R2PM_SUDO} ${MAKE} -j${R2PM_JOBS} install-lua || exit 1
}

R2PM_UNINSTALL() {
	cd build || exit 1
	${R2PM_SUDO} ${MAKE} uninstall
}

R2PM_END
