R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-rlang"
R2PM_DESC "Script radare2 with TCL via rlang"

R2PM_INSTALL() {
	./configure
	cd tcl
	${MAKE} clean || exit 1
	${MAKE} || exit 1
	${R2PM_SUDO} ${MAKE} install R2PM_PLUGDIR="${R2PM_PLUGDIR}" || exit 1
}

R2PM_UNINSTALL() {
	${R2PM_SUDO} ${MAKE} -C tcl uninstall
}

R2PM_END
