R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2"
R2PM_DESC "Radare2 Docker image on Debian armv6"

R2PM_INSTALL() {
	uname | grep Linux || exit 1
	cd dist/docker || return 1
	docker build --platform linux/arm/v6 -t r2docker-s390x .
	echo
	echo '$ docker run -ti r2docker'
	echo
	BIN="${R2PM_PREFIX}/bin/r2docker-armv6"
	echo '#!/bin/sh' > $BIN
	echo 'docker run --rm --privileged multiarch/qemu-user-static --reset -p yes --platform linux/s390x' >> $BIN
	echo 'docker run --platform linux/arm/v6 -v /tmp:/tmp -ti r2docker-s390x' >> $BIN
	chmod +x $BIN
}

R2PM_UNINSTALL() {
	docker rmi -f r2docker-armv6
}

R2PM_END
