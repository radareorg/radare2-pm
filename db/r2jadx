R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-extras"
R2PM_DESC "JADX decompiler integration plugin for radare2"
R2PM_DEPS jadx

R2PM_INSTALL() {
	cd r2jadx || exit 1
	rm -rf node_modules
	${MAKE} || exit 1
	${MAKE} install || exit 1
}

R2PM_UNINSTALL() {
	${MAKE} uninstall || exit 1
}

R2PM_END
