R2PM_BEGIN

R2PM_GIT "https://github.com/michaelforney/samurai"
R2PM_DESC "Ninja replacement in pure C"

R2PM_INSTALL() {
	${MAKE} -j CFLAGS="-O2 -DNO_GETLOADAVG=1"
	mkdir -p "${R2PM_BINDIR}"
	${R2PM_SUDO} cp -f samu "${R2PM_BINDIR}"
}

R2PM_UNINSTALL() {
	${R2PM_SUDO} rm -f "${R2PM_BINDIR}/samu"
}

R2PM_END
