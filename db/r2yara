R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/r2yara"
R2PM_DESC "yara plugin for radare2"
R2PM_DEPS yara

R2PM_INSTALL() {
	./configure --prefix="${R2PM_PREFIX}" || R2PM_FAIL "Configure"
	${MAKE} || R2PM_FAIL "Build"
	${MAKE} install || R2PM_FAIL "Install"
}

R2PM_UNINSTALL() {
	${MAKE} uninstall
}

R2PM_END
