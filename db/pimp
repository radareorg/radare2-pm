R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-extras"
R2PM_DESC "Triton-based plugin for concolic execution in radare2"

R2PM_INSTALL() {
	PIMPDIR="${R2PM_PLUGDIR}/pimp"
	cd pimp || exit 1
	mkdir -p "${PIMPDIR}"
	cp *.py ${PIMPDIR} || exit 1
}

R2PM_UNINSTALL() {
	PIMPDIR="${R2PM_PLUGDIR}/pimp"
	rm -rf "${PIMPDIR}"
}

R2PM_END
