R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-rlang"
R2PM_DESC "QuickJS scripting plugin for radare2"

R2PM_INSTALL() {
	./configure || exit 1
	cd quickjs || exit 1
	${MAKE} clean || exit 1
	${MAKE} || exit 1
	${MAKE} user-install || exit 1
}

R2PM_UNINSTALL() {
	${MAKE} -C quickjs user-uninstall || exit 1
}

R2PM_END
