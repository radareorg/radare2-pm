R2PM_BEGIN

R2PM_GIT "https://github.com/ahmeth4n/r2renef"
R2PM_DESC "[io] Renef IO plugin for radare2 - Dynamic Android Instrumentation"

R2PM_INSTALL() {
	${MAKE} clean || true
	${MAKE} || R2PM_FAIL "make"
	if [ "${GLOBAL}" = 1 ]; then
		${SUDO} ${MAKE} install
	else
		${MAKE} user-install
	fi
}

R2PM_UNINSTALL() {
	if [ "${GLOBAL}" = 1 ]; then
		${SUDO} ${MAKE} uninstall
	else
		${MAKE} user-uninstall
	fi
}

R2PM_END
