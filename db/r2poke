R2PM_BEGIN

R2PM_GIT "https://github.com/radare/radare2-extras"
R2PM_DESC "GNU Poke integration with radare2"

R2PM_INSTALL() {
	cd r2poke || exit 1
	${MAKE} clean
	${MAKE} || exit 1
	${MAKE} user-install R2PM_PLUGDIR="${R2PM_PLUGDIR}" || exit 1
}

R2PM_UNINSTALL() {
	cd r2poke || exit 1
	${MAKE} uninstall
}

R2PM_END
