R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-extras"
R2PM_DESC "Hexagon QDSP6 analysis plugin for radare2"

R2PM_INSTALL() {
	./configure --prefix="${R2PM_PREFIX}" || exit 1
	cd libr/arch/hexagon || exit 1
	${MAKE} clean
	${MAKE} || exit 1
}

R2PM_UNINSTALL() {
	rm -f "${R2PM_PLUGDIR}/arch_hexagon."*
}

R2PM_END
