R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2"
R2PM_DESC "Symlinked installation of radare2 from git"

R2PM_INSTALL() {
	if [ "${GLOBAL}" = 1 ]; then
		sys/install.sh
	else
		sys/install.sh ${R2PM_PREFIX}
	fi
}

R2PM_UNINSTALL() {
	if [ "${GLOBAL}" = 1 ]; then
		sys/uninstall.sh
	else
		sys/uninstall.sh "${R2PM_PREFIX}"
	fi
}

R2PM_END
