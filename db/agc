R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-extras"
R2PM_DESC "[r2-arch] AGC disassembly module"

R2PM_INSTALL() {
	./configure --prefix="${R2PM_PREFIX} || exit 1
	cd libr/asm/p
	${MAKE} clean
ls
	${MAKE} asm_agc.${LIBEXT} || exit 1
	cp -f asm_agc.${LIBEXT} "${R2PM_PLUGDIR}" || exit 1
	echo "cp -f asm_agc.${LIBEXT} ${R2PM_PLUGDIR}"
}

R2PM_UNINSTALL() {
	rm -f "${R2PM_PLUGDIR}/asm_agc".*
}

R2PM_END
