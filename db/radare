R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare"
R2PM_DESC "Nostalgic edition of the original radare"

R2PM_INSTALL() {
	if [ "${GLOBAL}" = 1 ]; then
		./configure
	else
		./configure --prefix="${R2PM_PREFIX}"
	fi
	${MAKE}
	${R2PM_SUDO} ${MAKE} install
}

R2PM_UNINSTALL() {
	${R2PM_SUDO} ${MAKE} uninstall
}

R2PM_END
