R2PM_BEGIN

R2PM_GIT "https://github.com/radareorg/radare2-skel"
R2PM_DESC "Create skeletons for radare2 scripts and plugins"

R2PM_INSTALL() {
	if [ "${R2PM_GLOBAL}" = 1 ]; then
		${R2PM_SUDO} make install
	else
		make user-install
	fi
}

R2PM_UNINSTALL() {
	if [ "${R2PM_GLOBAL}" = 1 ]; then
		${R2PM_SUDO} make uninstall
	else
		make user-uninstall
	fi
}

R2PM_END

