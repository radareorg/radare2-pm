R2PM_BEGIN

R2PM_GIT "https://github.com/anestisb/vdexExtractor"
R2PM_DESC "Verified DEX extractor from OAT files"

BINDIR="${R2PM_BINDIR}"

R2PM_INSTALL() {
	sh make.sh || exit 1
	ln -fs "${PWD}/bin/vdexExtractor" "${R2PM_BINDIR}/vdexExtractor"
}

R2PM_UNINSTALL() {
	rm -f "${BINDIR}"/vdexExtractor
}

R2PM_END
